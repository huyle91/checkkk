<Window x:Class="LeQuangHuyWPF.Views.BookingDetailView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LeQuangHuyWPF.Views"
        mc:Ignorable="d"
        Title="Booking Details" 
        Height="550" 
        Width="600"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" 
                   Text="Booking Information" 
                   FontSize="24" 
                   FontWeight="Bold" 
                   Margin="0,0,0,20"/>

        <!-- Form -->
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Customer -->
            <TextBlock Grid.Row="0" Grid.Column="0" 
                       Text="Customer:" 
                       FontSize="14" 
                       VerticalAlignment="Center" 
                       Margin="0,10"/>

            <ComboBox Grid.Row="0" Grid.Column="1" 
                     ItemsSource="{Binding Customers}" 
                     SelectedValue="{Binding SelectedCustomerID}"
                     SelectedValuePath="CustomerID"
                     DisplayMemberPath="CustomerFullName"
                     FontSize="14" 
                     Padding="5" 
                     Margin="0,10"
                     IsEnabled="{Binding IsAdmin}"/>

            <!-- Room -->
            <TextBlock Grid.Row="1" Grid.Column="0" 
                       Text="Room:" 
                       FontSize="14" 
                       VerticalAlignment="Center" 
                       Margin="0,10"/>

            <ComboBox Grid.Row="1" Grid.Column="1" 
                     ItemsSource="{Binding Rooms}" 
                     SelectedValue="{Binding SelectedRoomID}"
                     SelectedValuePath="RoomID"
                     FontSize="14" 
                     Padding="5" 
                     Margin="0,10">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding RoomNumber}" />
                            <TextBlock Text=" - " />
                            <TextBlock Text="{Binding RoomType.RoomTypeName}" />
                            <TextBlock Text=" (" />
                            <TextBlock Text="{Binding RoomPricePerDate, StringFormat=\{0:C\}}" />
                            <TextBlock Text=" per night)" />
                        </StackPanel>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>

            <!-- Check-In Date -->
            <TextBlock Grid.Row="2" Grid.Column="0" 
                       Text="Check-In Date:" 
                       FontSize="14" 
                       VerticalAlignment="Center" 
                       Margin="0,10"/>

            <DatePicker Grid.Row="2" Grid.Column="1" 
                      SelectedDate="{Binding StartDate}" 
                      FontSize="14" 
                      Margin="0,10"/>

            <!-- Check-Out Date -->
            <TextBlock Grid.Row="3" Grid.Column="0" 
                       Text="Check-Out Date:" 
                       FontSize="14" 
                       VerticalAlignment="Center" 
                       Margin="0,10"/>

            <DatePicker Grid.Row="3" Grid.Column="1" 
                      SelectedDate="{Binding EndDate}" 
                      FontSize="14" 
                      Margin="0,10"/>

            <!-- Total Price -->
            <TextBlock Grid.Row="4" Grid.Column="0" 
                       Text="Total Price:" 
                       FontSize="14" 
                       VerticalAlignment="Center" 
                       Margin="0,10"/>

            <TextBlock Grid.Row="4" Grid.Column="1" 
                     Text="{Binding TotalPrice, StringFormat=\{0:C\}}" 
                     FontSize="16"
                     FontWeight="Bold"
                     Foreground="#2ECC71"
                     VerticalAlignment="Center"
                     Margin="0,10"/>
        </Grid>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right" 
                    Margin="0,20,0,0">
            <Button Content="Cancel" 
                    Command="{Binding CancelCommand}" 
                    CommandParameter="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Window}}, Path=ShowDialogAction}"
                    FontSize="14" 
                    Padding="20,8" 
                    Margin="0,0,10,0"
                    Background="#E74C3C"
                    Foreground="White"/>

            <Button Content="Save" 
                    Command="{Binding SaveCommand}"
                    CommandParameter="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Window}}, Path=ShowDialogAction}"
                    FontSize="14" 
                    Padding="20,8"
                    Background="#2ECC71"
                    Foreground="White"/>
        </StackPanel>
    </Grid>
</Window>