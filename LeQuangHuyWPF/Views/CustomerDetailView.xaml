<Window x:Class="LeQuangHuyWPF.Views.CustomerDetailView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LeQuangHuyWPF.Views"
        mc:Ignorable="d"
        Title="Customer Details" 
        Height="500" 
        Width="600"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" 
                   Text="Customer Information" 
                   FontSize="24" 
                   FontWeight="Bold" 
                   Margin="0,0,0,20"/>

        <!-- Form -->
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Full Name -->
            <TextBlock Grid.Row="0" Grid.Column="0" 
                       Text="Full Name:" 
                       FontSize="14" 
                       VerticalAlignment="Center" 
                       Margin="0,10"/>

            <TextBox Grid.Row="0" Grid.Column="1" 
                     Text="{Binding CustomerFullName, UpdateSourceTrigger=PropertyChanged}" 
                     FontSize="14" 
                     Padding="5" 
                     Margin="0,10"/>

            <!-- Email -->
            <TextBlock Grid.Row="1" Grid.Column="0" 
                       Text="Email Address:" 
                       FontSize="14" 
                       VerticalAlignment="Center" 
                       Margin="0,10"/>

            <TextBox Grid.Row="1" Grid.Column="1" 
                     Text="{Binding EmailAddress, UpdateSourceTrigger=PropertyChanged}" 
                     FontSize="14" 
                     Padding="5" 
                     Margin="0,10"/>

            <!-- Phone -->
            <TextBlock Grid.Row="2" Grid.Column="0" 
                       Text="Phone Number:" 
                       FontSize="14" 
                       VerticalAlignment="Center" 
                       Margin="0,10"/>

            <TextBox Grid.Row="2" Grid.Column="1" 
                     Text="{Binding Telephone, UpdateSourceTrigger=PropertyChanged}" 
                     FontSize="14" 
                     Padding="5" 
                     Margin="0,10"/>

            <!-- Birthday -->
            <TextBlock Grid.Row="3" Grid.Column="0" 
                       Text="Birthday:" 
                       FontSize="14" 
                       VerticalAlignment="Center" 
                       Margin="0,10"/>

            <DatePicker Grid.Row="3" Grid.Column="1" 
                      SelectedDate="{Binding CustomerBirthday}" 
                      FontSize="14" 
                      Margin="0,10"/>

            <!-- Password -->
            <TextBlock Grid.Row="4" Grid.Column="0" 
                       Text="Password:" 
                       FontSize="14" 
                       VerticalAlignment="Center" 
                       Margin="0,10"/>

            <PasswordBox x:Name="txtPassword" 
                         Grid.Row="4" Grid.Column="1" 
                         FontSize="14" 
                         Padding="5" 
                         Margin="0,10"/>
        </Grid>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right" 
                    Margin="0,20,0,0">
            <Button Content="Cancel" 
                    Command="{Binding CancelCommand}" 
                    CommandParameter="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Window}}, Path=ShowDialogAction}"
                    FontSize="14" 
                    Padding="20,8" 
                    Margin="0,0,10,0"
                    Background="#E74C3C"
                    Foreground="White"/>

            <Button Content="Save" 
                    Command="{Binding SaveCommand}"
                    CommandParameter="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Window}}, Path=ShowDialogAction}"
                    FontSize="14" 
                    Padding="20,8"
                    Background="#2ECC71"
                    Foreground="White"/>
        </StackPanel>
    </Grid>
</Window>