<Window x:Class="LeQuangHuyWPF.Views.RoomDetailView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LeQuangHuyWPF.Views"
        mc:Ignorable="d"
        Title="Room Details" 
        Height="550" 
        Width="600"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" 
                   Text="Room Information" 
                   FontSize="24" 
                   FontWeight="Bold" 
                   Margin="0,0,0,20"/>

        <!-- Form -->
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Room Number -->
            <TextBlock Grid.Row="0" Grid.Column="0" 
                       Text="Room Number:" 
                       FontSize="14" 
                       VerticalAlignment="Center" 
                       Margin="0,10"/>

            <TextBox Grid.Row="0" Grid.Column="1" 
                     Text="{Binding RoomNumber, UpdateSourceTrigger=PropertyChanged}" 
                     FontSize="14" 
                     Padding="5" 
                     Margin="0,10"/>

            <!-- Description -->
            <TextBlock Grid.Row="1" Grid.Column="0" 
                       Text="Description:" 
                       FontSize="14" 
                       VerticalAlignment="Center" 
                       Margin="0,10"/>

            <TextBox Grid.Row="1" Grid.Column="1" 
                     Text="{Binding RoomDescription, UpdateSourceTrigger=PropertyChanged}" 
                     FontSize="14" 
                     Padding="5" 
                     Margin="0,10"
                     TextWrapping="Wrap"
                     AcceptsReturn="True"
                     Height="100"
                     VerticalScrollBarVisibility="Auto"/>

            <!-- Max Capacity -->
            <TextBlock Grid.Row="2" Grid.Column="0" 
                       Text="Max Capacity:" 
                       FontSize="14" 
                       VerticalAlignment="Center" 
                       Margin="0,10"/>

            <TextBox Grid.Row="2" Grid.Column="1" 
                     Text="{Binding RoomMaxCapacity, UpdateSourceTrigger=PropertyChanged}" 
                     FontSize="14" 
                     Padding="5" 
                     Margin="0,10"/>

            <!-- Price Per Day -->
            <TextBlock Grid.Row="3" Grid.Column="0" 
                       Text="Price Per Day:" 
                       FontSize="14" 
                       VerticalAlignment="Center" 
                       Margin="0,10"/>

            <TextBox Grid.Row="3" Grid.Column="1" 
                     Text="{Binding RoomPricePerDate, UpdateSourceTrigger=PropertyChanged}" 
                     FontSize="14" 
                     Padding="5" 
                     Margin="0,10"/>

            <!-- Room Type -->
            <TextBlock Grid.Row="4" Grid.Column="0" 
                       Text="Room Type:" 
                       FontSize="14" 
                       VerticalAlignment="Center" 
                       Margin="0,10"/>

            <ComboBox Grid.Row="4" Grid.Column="1" 
                     ItemsSource="{Binding RoomTypes}" 
                     SelectedValue="{Binding SelectedRoomTypeID}"
                     SelectedValuePath="RoomTypeID"
                     DisplayMemberPath="RoomTypeName"
                     FontSize="14" 
                     Padding="5" 
                     Margin="0,10"/>
        </Grid>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right" 
                    Margin="0,20,0,0">
            <Button Content="Cancel" 
                    Command="{Binding CancelCommand}" 
                    CommandParameter="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Window}}, Path=ShowDialogAction}"
                    FontSize="14" 
                    Padding="20,8" 
                    Margin="0,0,10,0"
                    Background="#E74C3C"
                    Foreground="White"/>

            <Button Content="Save" 
                    Command="{Binding SaveCommand}"
                    CommandParameter="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Window}}, Path=ShowDialogAction}"
                    FontSize="14" 
                    Padding="20,8"
                    Background="#2ECC71"
                    Foreground="White"/>
        </StackPanel>
    </Grid>
</Window>